{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": ".sst/dist",
    "noEmit": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSourceMap": false,
    "paths": {
      "@src/*": ["src/*"],
      "@/ai-tools": ["src/ai-tools/index"],
      "@/ai-agent/*": ["src/ai-agent/*"]
    }
  },
  "include": ["src/**/*.ts", "functions/**/*.ts"],
  "exclude": ["node_modules", "deploy/**", "sst.config.ts", ".sst/**"]
}
